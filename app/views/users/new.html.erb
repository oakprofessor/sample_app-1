<% provide :title, t(".signup_title") %>
<h1><%= t ".signup_title" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label t(".signup_name") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label t(".signup_email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label t(".signup_password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label t(".signup_password_confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t(".signup_submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
