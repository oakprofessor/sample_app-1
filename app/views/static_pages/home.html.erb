<% provide :title, t(".home_title")  %>
<div class="center jumbotron">
  <% if logged_in? %>
    <h1><%= t ".welcome_user" %></h1>

    <h2><%= link_to t("helpers.sessions_helper.profile"), current_user %></h2>
  <% else %>
    <h1><%= t ".home_title" %></h1>

    <h2><%= t ".home_detail_html" %></h2>

    <%= link_to t(".signup"), signup_path, class: "btn btn-lg btn-primary" %>
  <% end %>
</div>

<%= link_to image_tag("rails.png", alt: "Rails logo"), "http://rubyonrails.org/" %>
