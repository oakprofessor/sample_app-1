<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= favicon_link_tag "favicon.ico" %>
  <%= render "layouts/rails_default" %>
  <%= render "layouts/shim" %>
</head>

<body>
  <%= render "layouts/header" %>
  <div class="container">
    <%= yield %>
    <%= link_to t(:english), locale:"en" %>
    <%= link_to t(:vietnamese), locale:"vi" %>
    <%= render "layouts/footer" %>
  </div>
</body>
</html>
